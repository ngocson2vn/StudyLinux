#!/bin/bash

TRY_NUMBER=3
#SPY3=/home/son/local/app/Python-3.4.1/bin/supervisord
SPY2=/bin/supervisord
CONFIG=/etc/supervisord.conf

LOADER=$SPY2

if [ "$1" = "PY3" ]; then
	LOADER=$SPY3
fi

function stopd() {
	old_pid=$(ps -o pid,cmd -e | grep -P "supervisord -c|supervisord.py -c" | grep -v grep | awk '{print $1}')

	if [ "$old_pid" ]; then
		printf "%-40s" "Stopping supervisord with PID = $old_pid"
		/usr/bin/kill -s TERM $old_pid

		count=0

		while [ 1 ]
		do
			echo -n "."
			sleep 1
			pid=$(ps -o pid,cmd -e | grep -P "supervisord -c|supervisord.py -c" | grep -v grep | awk '{print $1}')
			
			if [ ! "$pid" ]; then
				if [ "$count" -ge "$TRY_NUMBER" ]; then
					echo " DONE     old PID = $old_pid"
					break
				fi
			else
				/usr/bin/kill -s TERM $old_pid
				count=-1
			fi
			
			count=$((count + 1))
		done
	fi
}

function startd() {
	printf "%-40s" "Starting supervisord"
	$LOADER -c $CONFIG

	count=0
	while [ 1 ]
	do
		echo -n "."
		sleep 1
		
		pid=$(ps -o pid,cmd -e | grep -P "supervisord -c|supervisord.py -c" | grep -v grep | awk '{print $1}')
		
		if [ "$pid" ]; then
			if [ "$count" -ge "$TRY_NUMBER" ]; then
				echo " OK       new PID = $pid"
				break
			fi
		else
			$LOADER -c $CONFIG > /dev/null 2>&1
			count=-1
		fi
		
		count=$((count + 1))
	done

	echo ""
	/usr/bin/eps
}

function restart() {
	stopd
	startd
}

case "$1" in
	stop)
		stopd
		;;
	*)
		restart
esac
